<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_color_rgb_100_57_3">
            <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/activity_background"
                android:gravity="top"
                app:layout_collapseMode="pin"

                app:theme="@style/MyToolbarTheme"
                >


                <RelativeLayout
                    android:layout_width="match_parent"

                    android:layout_height="?attr/actionBarSize"
                    >

                    <ImageView
                        android:id="@+id/iv_backbtn"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:tint="@color/white"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_back_black_24dp"/>


                    <TextView


                        android:layout_centerVertical="true"
                        android:text="Profile"
                        android:textSize="20dp"
                        android:layout_marginStart="10dp"
                        android:id="@+id/toolbar_title"
                        android:layout_toRightOf="@+id/iv_backbtn"
                        android:textColor="@color/lebel_text_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp" />
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="70dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/appbar"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/iv_profile_background"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@null"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/rl_name"
                        android:layout_marginTop="50dp"
                        android:layout_below="@+id/img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_name"

                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:text="kapil jadhao"
                            android:textSize="20dp"
                            android:textColor="@color/normal_text_color"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_type"
                        android:layout_marginTop="40dp"
                        android:layout_below="@+id/rl_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/tv_type_lable"
                            android:layout_width="25dp"
                            android:tint="@color/normal_text_color"
                            android:src="@drawable/ic_profile"
                            android:layout_height="25dp" />

                        <TextView
                            android:id="@+id/tv_type"
                            android:layout_width="wrap_content"
                            android:text="Employee"
                            android:layout_toRightOf="@+id/tv_type_lable"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/normal_text_color"
                            android:textSize="15dp"

                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_addr"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/rl_type"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/tv_addr_lable"
                            android:layout_width="25dp"
                            android:src="@drawable/ic_address"
                            android:tint="@color/normal_text_color"
                            android:layout_height="25dp" />

                        <TextView
                            android:id="@+id/tv_addr"
                            android:layout_width="match_parent"
                            android:layout_marginStart="10dp"
                            android:text="D-305 shevale park, shahu colony lane no.4"
                            android:layout_toRightOf="@+id/tv_addr_lable"
                            android:textSize="15dp"
                            android:textColor="@color/normal_text_color"


                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_mobile"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/rl_addr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/tv_mobile_lable"
                            android:layout_width="25dp"
                            android:src="@drawable/ic_smartphone"
                            android:tint="@color/normal_text_color"
                            android:layout_height="25dp" />

                        <TextView
                            android:id="@+id/tv_mobile"
                            android:layout_width="wrap_content"
                            android:text="7030537378"
                            android:layout_marginStart="10dp"
                            android:layout_toRightOf="@+id/tv_mobile_lable"
                            android:textSize="15dp"
                            android:textColor="@color/normal_text_color"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rl_email"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/rl_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/tv_email_lable"
                            android:layout_width="25dp"
                            android:src="@drawable/ic_envelope"
                            android:tint="@color/normal_text_color"
                            android:layout_height="25dp" />

                        <TextView
                            android:id="@+id/tv_email"
                            android:layout_marginStart="10dp"
                            android:layout_width="wrap_content"
                            android:text="kjadhao33@gmail.com"
                            android:textSize="15dp"
                            android:textColor="@color/normal_text_color"
                            android:layout_toRightOf="@+id/tv_email_lable"

                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_change_password"
                        android:layout_below="@+id/rl_email"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:textSize="15dp"
                        android:text="Copy Address"
                        android:textColor="@color/red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp" />

                </RelativeLayout>




            </android.support.v7.widget.CardView>

        </RelativeLayout>







        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_marginTop="20dp"
            android:id="@+id/profile_img"
            android:layout_below="@+id/appbar"

            android:layout_centerHorizontal="true"
            android:layout_height="100dp" />





    </RelativeLayout>




</android.support.v4.widget.NestedScrollView>